{
	"compilerOptions": {
		"target": "es2016",
		"module": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationDir": "./dist",
		"isolatedModules": true,
		"outDir": "./dist"
	},
	"include": [
		"src"
	]
}
